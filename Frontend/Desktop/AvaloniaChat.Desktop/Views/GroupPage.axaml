<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaChat.Desktop.Views.GroupPage">
	<Grid RowDefinitions="Auto * Auto" Margin="15">
        <Grid>
            <TextBox Text="{Binding GroupName}" Watermark="Group title"></TextBox>
            <!--<Button Content="Изменить">
			
            </Button>-->
        </Grid>
       
        <Grid Row="2">
            <Button Content="Save" HorizontalAlignment="Right" Background="Transparent" BorderBrush="Transparent"></Button>
            <Button Content="Back" Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Left"></Button>
        </Grid>

    </Grid>
</UserControl>
